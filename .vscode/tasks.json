{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Current Example",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Build Current Example (Windows)",
            "type": "shell",
            "command": "C:/msys64/usr/bin/make.exe",
            "options": {
                "cwd": "${fileDirname}",
                "env": {
                    "PATH": "C:/msys64/ucrt64/bin;C:/msys64/usr/bin;${env:PATH}"
                }
            },
            "problemMatcher": ["$gcc"],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
